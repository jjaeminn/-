for (var star = 9; star>=1; star -=2){
  console.log(' '.repeat((9 - star)/2) + '*'.repeat(star))};

for (var i = 0; i <= 4; i++) {// 구문이 얼마나 반복되는가?
  console.log( ' '.repeat(math.abs(i - 2) + '*'.repeat(5 - math.abs(2*(i -2))))// 공백이 2-1-0-1-2로 반복됨 따라서 i-2= -2이고 math.abs를 통하여 -2 = 2로 변환 이렇게 반복하면 공백 반복이 완료됨 / 별은 1-3-5-3-1로 반복됨 공차가 2임을 이용하여 5-2(k)정도의 식으로 유추해 볼 수 있고 0 -> 1, 1->3이 나올려면 k = i+? 라고 하면 이것이 2or -2가 되야하는데 math.abs과 마름모 꼴로의 값이 성립하려면 -2가 되야하므로 i = -2 이다. 
}